<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vintélo</title>
    <link rel="stylesheet" href="/css/estilo.css">
    <link rel="stylesheet" href="/css/categorias.css">
    <link rel="icon" href="/imagens/brilhoescuro.png" type="image/x-icon">
</head>
<body>
    <!-- Banner 10% OFF Desktop -->
    <section class="oculto-mobile">
        <center>
            <section class="discount-banner">
                <span class="highlight">10% OFF Na primeira compra</span>
            </section>
        </center>
        <header class="main-header">
            <a href="/homecomprador">
                <img src="/imagens/logo.png" class="img-logo">
            </a>
            <nav>
                <a href="/categorias">Vestidos</a>
                <a href="/categorias">Saias</a>
                <a href="/categorias">Blusas</a>
                <a href="/categorias">Calças</a>
                <a href="/categorias">Outros</a>
            </nav>
            <section class="search-profile">
                <form>
                    <input type="text" placeholder="Buscar...">
                </form>
                <ul>
                    <li><a href="#"><img src="/imagens/icone saco.png" class="img-tamanho"></a></li>
                    <li><a href="/menu"><img src="/imagens/imagem sem cadastro.avif" class="maria"></a></li>
                    <li><a href="#"><img src="/imagens/icone coraçao.png" class="img-tamanho2"></a></li>
                </ul>
            </section>
        </header>
    </section>
    
    <!-- Header Mobile -->
    <header class="simple-header oculto-desktop">
        <a href="/homecomprador" class="back-arrow">
            <img src="/imagens/seta.png" alt="Voltar">
        </a>
        <img src="/imagens/logo.png" class="logo-center">
        <a href="/sacola1" class="cart-icon">
            <img src="/imagens/carrinho.png" alt="Carrinho">
        </a>
    </header>

    <main>
        <!-- Título Principal -->
        <section class="page-title">
            <span class="garimpe-text">Explore por</span>
            <span class="vintelo-text">Categorias</span>
        </section>

        <div class="container">
            <!-- Filtro Lateral Desktop -->
            <section class="filtro oculto-mobile">
                <details open>
                    <summary>Categorias</summary>
                    <section class="categories-grid">
                        <button class="category-btn active" data-category="todos">Todos</button>
                        <button class="category-btn" data-category="vestidos">Vestidos</button>
                        <button class="category-btn" data-category="saias">Saias</button>
                        <button class="category-btn" data-category="blusas">Blusas</button>
                        <button class="category-btn" data-category="calcas">Calças</button>
                        <button class="category-btn" data-category="outros">Outros</button>
                    </section>
                </details>
                <details open>
                    <summary>Ordenar por</summary>
                    <ul>
                        <li onclick="sortProducts('recent')">Mais recentes</li>
                        <li onclick="sortProducts('price-low')">Menor preço</li>
                        <li onclick="sortProducts('price-high')">Maior preço</li>
                        <li onclick="sortProducts('popular')">Mais populares</li>
                    </ul>
                </details>
                <details open>
                    <summary>Valor</summary>
                    <section class="faixa-valor">
                        <label for="min">Min</label>
                        <input type="range" id="min" min="0" max="500" value="10" oninput="updatePriceRange()">
                        <label for="max">Max</label>
                        <input type="range" id="max" min="0" max="500" value="300" oninput="updatePriceRange()">
                    </section>
                    <section class="valores">
                        <input type="text" id="min-value" placeholder="10" onchange="filterByPrice()">
                        <input type="text" id="max-value" placeholder="300" onchange="filterByPrice()">
                    </section>
                </details>
                <details open>
                    <summary>Tamanhos</summary>
                    <section class="sizes-grid">
                        <button class="size-btn" data-size="PP">PP</button>
                        <button class="size-btn" data-size="P">P</button>
                        <button class="size-btn" data-size="M">M</button>
                        <button class="size-btn" data-size="G">G</button>
                        <button class="size-btn" data-size="GG">GG</button>
                        <button class="size-btn" data-size="XG">XG</button>
                    </section>
                </details>
                <details>
                    <summary>Condição</summary>
                    <ul>
                        <li><input type="checkbox" id="novo"> <label for="novo">Novo</label></li>
                        <li><input type="checkbox" id="seminovo"> <label for="seminovo">Seminovo</label></li>
                        <li><input type="checkbox" id="usado"> <label for="usado">Usado</label></li>
                    </ul>
                </details>
                <button class="button-filtro" onclick="applyFilters()">APLICAR FILTROS</button>
                <button class="clear-filters" onclick="clearFilters()">Limpar Filtros</button>
            </section>

            <!-- Conteúdo Principal -->
            <div class="content-area">

                <!-- Seção Vestidos -->
                <section class="categoria-section" data-category="vestidos">
                    <div class="categoria-header">
                        <h3>Vestidos</h3>
                        <a href="#" class="ver-tudo">ver tudo</a>
                    </div>
                    <div class="product-carousel">
                        <article class="product-card" data-category="vestidos" data-size="M" data-condition="novo" data-price="49.99">
                            <img src="/imagens/vestido branco.png" alt="Vestido branco">
                            <div class="product-info">
                                <h4>Vestido branco</h4>
                                <p class="price">R$ 49,99</p>
                                <div class="product-actions">
                                    <button class="favorite"><img src="/imagens/coração de fav2.png"></button>
                                    <button class="cart"><img src="/imagens/sacola.png"></button>
                                </div>
                            </div>
                        </article>
                        <article class="product-card" data-category="vestidos" data-size="P" data-condition="seminovo" data-price="39.99">
                            <img src="/imagens/vestido roxo.png" alt="Vestido roxo">
                            <div class="product-info">
                                <h4>Vestido roxo</h4>
                                <p class="price">R$ 39,99</p>
                                <div class="product-actions">
                                    <button class="favorite"><img src="/imagens/coração de fav2.png"></button>
                                    <button class="cart"><img src="/imagens/sacola.png"></button>
                                </div>
                            </div>
                        </article>
                        <article class="product-card" data-category="vestidos" data-size="G" data-condition="novo" data-price="65.99">
                            <img src="/imagens/vestido branco.png" alt="Vestido floral">
                            <div class="product-info">
                                <h4>Vestido floral</h4>
                                <p class="price">R$ 65,99</p>
                                <div class="product-actions">
                                    <button class="favorite"><img src="/imagens/coração de fav2.png"></button>
                                    <button class="cart"><img src="/imagens/sacola.png"></button>
                                </div>
                            </div>
                        </article>
                    </div>
                </section>

                <!-- Seção Saias -->
                <section class="categoria-section" data-category="saias">
                    <div class="categoria-header">
                        <h3>Saias</h3>
                        <a href="#" class="ver-tudo">ver tudo</a>
                    </div>
                    <div class="product-carousel">
                        <article class="product-card" data-category="saias" data-size="M" data-condition="usado" data-price="35.99">
                            <img src="/imagens/saia preta.png" alt="Saia preta">
                            <div class="product-info">
                                <h4>Saia preta</h4>
                                <p class="price">R$ 35,99</p>
                                <div class="product-actions">
                                    <button class="favorite"><img src="/imagens/coração de fav2.png"></button>
                                    <button class="cart"><img src="/imagens/sacola.png"></button>
                                </div>
                            </div>
                        </article>
                        <article class="product-card" data-category="saias" data-size="P" data-condition="seminovo" data-price="45.99">
                            <img src="/imagens/saia longa.png" alt="Saia longa">
                            <div class="product-info">
                                <h4>Saia longa</h4>
                                <p class="price">R$ 45,99</p>
                                <div class="product-actions">
                                    <button class="favorite"><img src="/imagens/coração de fav2.png"></button>
                                    <button class="cart"><img src="/imagens/sacola.png"></button>
                                </div>
                            </div>
                        </article>
                        <article class="product-card" data-category="saias" data-size="G" data-condition="novo" data-price="52.99">
                            <img src="/imagens/saia preta.png" alt="Saia midi">
                            <div class="product-info">
                                <h4>Saia midi</h4>
                                <p class="price">R$ 52,99</p>
                                <div class="product-actions">
                                    <button class="favorite"><img src="/imagens/coração de fav2.png"></button>
                                    <button class="cart"><img src="/imagens/sacola.png"></button>
                                </div>
                            </div>
                        </article>
                    </div>
                </section>

                <!-- Seção Blusas -->
                <section class="categoria-section" data-category="blusas">
                    <div class="categoria-header">
                        <h3>Blusas</h3>
                        <a href="#" class="ver-tudo">ver tudo</a>
                    </div>
                    <div class="product-carousel">
                        <article class="product-card" data-category="blusas" data-size="P" data-condition="novo" data-price="19.99">
                            <img src="/imagens/regata branca.png" alt="Regata branca">
                            <div class="product-info">
                                <h4>Regata branca</h4>
                                <p class="price">R$ 19,99</p>
                                <div class="product-actions">
                                    <button class="favorite"><img src="/imagens/coração de fav2.png"></button>
                                    <button class="cart"><img src="/imagens/sacola.png"></button>
                                </div>
                            </div>
                        </article>
                        <article class="product-card" data-category="blusas" data-size="M" data-condition="seminovo" data-price="25.99">
                            <img src="/imagens/cropped rosa.png" alt="Cropped rosa">
                            <div class="product-info">
                                <h4>Cropped rosa</h4>
                                <p class="price">R$ 25,99</p>
                                <div class="product-actions">
                                    <button class="favorite"><img src="/imagens/coração de fav2.png"></button>
                                    <button class="cart"><img src="/imagens/sacola.png"></button>
                                </div>
                            </div>
                        </article>
                        <article class="product-card" data-category="blusas" data-size="G" data-condition="usado" data-price="15.99">
                            <img src="/imagens/regata branca.png" alt="Blusa básica">
                            <div class="product-info">
                                <h4>Blusa básica</h4>
                                <p class="price">R$ 15,99</p>
                                <div class="product-actions">
                                    <button class="favorite"><img src="/imagens/coração de fav2.png"></button>
                                    <button class="cart"><img src="/imagens/sacola.png"></button>
                                </div>
                            </div>
                        </article>
                    </div>
                </section>

                <!-- Seção Calças -->
                <section class="categoria-section" data-category="calcas">
                    <div class="categoria-header">
                        <h3>Calças</h3>
                        <a href="#" class="ver-tudo">ver tudo</a>
                    </div>
                    <div class="product-carousel">
                        <article class="product-card" data-category="calcas" data-size="M" data-condition="novo" data-price="75.99">
                            <img src="/imagens/vestido branco.png" alt="Calça jeans">
                            <div class="product-info">
                                <h4>Calça jeans</h4>
                                <p class="price">R$ 75,99</p>
                                <div class="product-actions">
                                    <button class="favorite"><img src="/imagens/coração de fav2.png"></button>
                                    <button class="cart"><img src="/imagens/sacola.png"></button>
                                </div>
                            </div>
                        </article>
                        <article class="product-card" data-category="calcas" data-size="P" data-condition="seminovo" data-price="55.99">
                            <img src="/imagens/saia preta.png" alt="Calça preta">
                            <div class="product-info">
                                <h4>Calça preta</h4>
                                <p class="price">R$ 55,99</p>
                                <div class="product-actions">
                                    <button class="favorite"><img src="/imagens/coração de fav2.png"></button>
                                    <button class="cart"><img src="/imagens/sacola.png"></button>
                                </div>
                            </div>
                        </article>
                    </div>
                </section>

                <!-- Seção Outros -->
                <section class="categoria-section" data-category="outros">
                    <div class="categoria-header">
                        <h3>Outros</h3>
                        <a href="#" class="ver-tudo">ver tudo</a>
                    </div>
                    <div class="product-carousel">
                        <article class="product-card" data-category="outros" data-size="M" data-condition="novo" data-price="29.99">
                            <img src="/imagens/cropped rosa.png" alt="Acessório">
                            <div class="product-info">
                                <h4>Acessório</h4>
                                <p class="price">R$ 29,99</p>
                                <div class="product-actions">
                                    <button class="favorite"><img src="/imagens/coração de fav2.png"></button>
                                    <button class="cart"><img src="/imagens/sacola.png"></button>
                                </div>
                            </div>
                        </article>
                        <article class="product-card" data-category="outros" data-size="P" data-condition="usado" data-price="18.99">
                            <img src="/imagens/vestido roxo.png" alt="Bolsa">
                            <div class="product-info">
                                <h4>Bolsa</h4>
                                <p class="price">R$ 18,99</p>
                                <div class="product-actions">
                                    <button class="favorite"><img src="/imagens/coração de fav2.png"></button>
                                    <button class="cart"><img src="/imagens/sacola.png"></button>
                                </div>
                            </div>
                        </article>
                    </div>
                </section>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <img src="/imagens/logo2.jpeg" alt="Vintélo" class="footer-image">
        <section class="social-media">
            <p class="p-footer">Siga nossas redes sociais</p>
            <ul class="social-links">
                <li><a href="https://facebook.com" target="_blank"><img src="/imagens/Facebook.png" alt="Facebook"></a></li>
                <li><a href="https://twitter.com" target="_blank"><img src="/imagens/Pinterest.png" alt="Pinterest"></a></li>
                <li><a href="https://www.instagram.com/vintelobrechos" target="_blank"><img src="/imagens/Instagram.png" alt="Instagram"></a></li>
            </ul>
        </section>
        <p class="copyright">©2024 Vintélo. Todos os direitos reservados.</p>
    </footer>

    <script src="/js/categorias.js"></script>
</body>
</html>