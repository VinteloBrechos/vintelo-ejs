        <aside class="filters-sidebar">
            <h3>Filtros</h3>
            
            <div class="filter-group">
                <h4>Categorias</h4>
                <div class="filter-options">
                    <div class="filter-option">
                        <input type="checkbox" id="cat-todos" checked>
                        <label for="cat-todos">Todos</label>
                    </div>
                    <div class="filter-option">
                        <input type="checkbox" id="cat-blusas">
                        <label for="cat-blusas">Blusas</label>
                    </div>
                    <div class="filter-option">
                        <input type="checkbox" id="cat-saias">
                        <label for="cat-saias">Saias</label>
                    </div>
                    <div class="filter-option">
                        <input type="checkbox" id="cat-vestidos">
                        <label for="cat-vestidos">Vestidos</label>
                    </div>
                    <div class="filter-option">
                        <input type="checkbox" id="cat-acessorios">
                        <label for="cat-acessorios">Acessórios</label>
                    </div>
                </div>
            </div>
            
            <div class="filter-group">
                <h4>Preço</h4>
                <div class="price-range">
                    <div class="price-inputs">
                        <input type="number" id="min-price" placeholder="Mín" min="0">
                        <input type="number" id="max-price" placeholder="Máx" min="0">
                    </div>
                </div>
            </div>
            
            <div class="filter-group">
                <h4>Condição</h4>
                <div class="filter-options">
                    <div class="filter-option">
                        <input type="checkbox" id="cond-novo">
                        <label for="cond-novo">Novo</label>
                    </div>
                    <div class="filter-option">
                        <input type="checkbox" id="cond-seminovo">
                        <label for="cond-seminovo">Seminovo</label>
                    </div>
                    <div class="filter-option">
                        <input type="checkbox" id="cond-usado">
                        <label for="cond-usado">Usado</label>
                    </div>
                </div>
            </div>
            
            <button class="apply-filters" onclick="applyFilters()">Aplicar Filtros</button>
        </aside>
        
