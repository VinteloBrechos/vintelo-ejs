                <form class="search-form">
                    <input type="text" placeholder="Buscar...">
                </form>
                <section class="user-actions">
                    <a href="/carrinho"><img src="imagens/icone saco.png" alt="Sacola"></a>
                    <a href="/perfilcliente"><img src="imagens/icone sem cadastro.png" alt="Perfil"></a>
                    <a href="#"><img src="imagens/icone coraçao.png" alt="Favoritos"></a>
                </section>
            </section>
        </header>
    </section>

    <main>
        <!-- Layout Mobile -->
        <section class="mobile-content">
            <!-- Categoria Blusas -->
            <section class="category-section">
                <h2 class="category-title">Blusas</h2>
                <section class="products-carousel">
                    <article class="product-item">
                        <img src="imagens/regatinha branca.png" alt="Regatinha Branca">
                        <h3>Regatinha Branca</h3>
                        <p class="price">R$25,00</p>
                    </article>
                    <article class="product-item">
                        <img src="imagens/cropped cinza.png" alt="Cropped Cinza">
                        <h3>Cropped Cinza</h3>
                        <p class="price">R$29,99</p>
                    </article>
                    <article class="product-item">
                        <a href="/produto1"><img src="imagens/cropped flor.png" alt="Cropped Flor"></a>
                        <h3>Cropped Flor</h3>
                        <p class="price">R$19,99</p>
                    </article>
                    <article class="product-item">
                        <img src="imagens/cropped verde.png" alt="Cropped Verde">
                        <h3>Cropped Verde</h3>
                        <p class="price">R$17,00</p>
                    </article>
                </section>
            </section>

            <!-- Categoria Saias -->
            <section class="category-section">
                <h2 class="category-title">Saias</h2>
                <section class="products-carousel">
                    <article class="product-item">
                        <a href="/produto1"><img src="imagens/saia rosa brilhante.png" alt="Saia Rosa Brilhante"></a>
                        <h3>Saia Rosa Brilhante</h3>
                        <p class="price">R$19,99</p>
                    </article>
                    <article class="product-item">
                        <a href="/produto4"><img src="imagens/saia preta brilhante.png" alt="Saia Preta Brilhante"></a>
                        <h3>Saia Preta Brilhante</h3>
                        <p class="price">R$20,00</p>
                    </article>
                    <article class="product-item">
                        <img src="imagens/saia marrom.png" alt="Saia Marrom">
                        <h3>Saia Marrom</h3>
                        <p class="price">R$25,00</p>
                    </article>
                    <article class="product-item">
                        <img src="imagens/saias preto e branca.png" alt="Conjunto de Saias">
                        <h3>Conjunto de Saias</h3>
                        <p class="price">R$39,99</p>
                    </article>
                </section>
            </section>

            <!-- Categoria Vestidos -->
            <section class="category-section">
                <h2 class="category-title">Vestidos</h2>
                <section class="products-carousel">
                    <article class="product-item">
                        <a href="/produto1"><img src="imagens/vestido branco.png" alt="Vestido Branco"></a>
                        <h3>Vestido Branco</h3>
                        <p class="price">R$25,00</p>
                    </article>
                    <article class="product-item">
                        <a href="/produto4"><img src="imagens/vestido roxo.png" alt="Vestido Roxo"></a>
                        <h3>Vestido Roxo</h3>
                        <p class="price">R$20,00</p>
                    </article>
                    <article class="product-item">
                        <img src="imagens/vestido rosa.png" alt="Vestido Rosa">
                        <h3>Vestido Rosa</h3>
                        <p class="price">R$25,00</p>
                    </article>
                    <article class="product-item">
                        <img src="imagens/vestido preto.png" alt="Vestido Preto">
                        <h3>Vestido Preto</h3>
                        <p class="price">R$49,99</p>
                    </article>
                </section>
            </section>

            <!-- Categoria Acessórios -->
            <section class="category-section">
                <h2 class="category-title">Acessórios</h2>
                <section class="products-carousel">
                    <article class="product-item">
                        <a href="/produto1"><img src="imagens/oculos.png" alt="Óculos Escuros"></a>
                        <h3>Óculos Escuros</h3>
                        <p class="price">R$19,99</p>
                    </article>
                    <article class="product-item">
                        <img src="imagens/bolsa.png" alt="Bolsa Preta">
                        <h3>Bolsa Preta</h3>
                        <p class="price">R$25,00</p>
                    </article>
                    <article class="product-item">
                        <img src="imagens/aneis.png" alt="Conjunto De Anéis">
                        <h3>Conjunto De Anéis</h3>
                        <p class="price">R$29,99</p>
                    </article>
                    <article class="product-item">
                        <img src="imagens/relogios.png" alt="Relógio Rose Gold">
                        <h3>Relógio Rose Gold</h3>
                        <p class="price">R$17,00</p>
                    </article>
                </section>
            </section>
        </section>

        <!-- Layout Desktop -->
        <section class="desktop-content">
            <section class="content-wrapper">
                <!-- Filtros Laterais -->
                <aside class="filtro">
                    <details open>
                        <summary>Categorias</summary>
                        <section class="categories-grid">
                            <button class="category-btn active" data-category="todos">Todos</button>
                            <button class="category-btn" data-category="vestidos">Vestidos</button>
                            <button class="category-btn" data-category="blusas">Blusas</button>
                            <button class="category-btn" data-category="calcas">Calças</button>
                            <button class="category-btn" data-category="saias">Saias</button>
                            <button class="category-btn" data-category="acessorios">Acessórios</button>
                            <button class="category-btn" data-category="calcados">Calçados</button>
                            <button class="category-btn" data-category="casacos">Casacos</button>
                            <button class="category-btn" data-category="conjuntos">Conjuntos</button>
                            <button class="category-btn" data-category="plus-size">Plus Size</button>
                        </section>
                    </details>
                    <details open>
                        <summary>Ordenar por</summary>
                        <ul>
                            <li onclick="sortProducts('recent')">Mais recentes</li>
                            <li onclick="sortProducts('price-low')">Menor preço</li>
                            <li onclick="sortProducts('price-high')">Maior preço</li>
                            <li onclick="sortProducts('popular')">Mais populares</li>
                        </ul>
                    </details>
                    <details open>
                        <summary>Valor</summary>
                        <section class="faixa-valor">
                            <label for="min">Min</label>
                            <input type="range" id="min" min="0" max="500" value="10" oninput="updatePriceRange()">
                            <label for="max">Max</label>
                            <input type="range" id="max" min="0" max="500" value="300" oninput="updatePriceRange()">
                        </section>
                        <section class="valores">
                            <input type="text" id="min-value" placeholder="10" onchange="filterByPrice()">
                            <input type="text" id="max-value" placeholder="300" onchange="filterByPrice()">
                        </section>
                    </details>
                    <details open>
                        <summary>Tamanhos</summary>
                        <section class="sizes-grid">
                            <button class="size-btn" data-size="pp">PP</button>
                            <button class="size-btn" data-size="p">P</button>
                            <button class="size-btn" data-size="m">M</button>
                            <button class="size-btn" data-size="g">G</button>
                            <button class="size-btn" data-size="gg">GG</button>
                            <button class="size-btn" data-size="xgg">XGG</button>
                        </section>
                    </details>
                    <details>
                        <summary>Condição</summary>
                        <ul>
                            <li><input type="checkbox" id="novo"> <label for="novo">Novo</label></li>
                            <li><input type="checkbox" id="seminovo"> <label for="seminovo">Seminovo</label></li>
                            <li><input type="checkbox" id="usado"> <label for="usado">Usado</label></li>
                        </ul>
                    </details>
                    <button class="button-filtro" onclick="applyFilters()">APLICAR FILTROS</button>
                    <button class="clear-filters" onclick="clearFilters()">Limpar Filtros</button>
                </aside>

                <!-- Área Principal de Produtos -->
                <section class="products-main">
                    <section class="products-header">
                        <h1>Todas as Peças</h1>
                        <select class="sort-select">
                            <option>Ordenar por</option>
                            <option>Menor preço</option>
                            <option>Maior preço</option>
                            <option>Mais recentes</option>
                        </select>
                    </section>

                    <section class="products-grid">
                        <article class="product-card">
                            <img src="imagens/regatinha branca.png" alt="Regatinha Branca">
                            <h3>Regatinha Branca</h3>
                            <p class="price">R$25,00</p>
                        </article>
                        <article class="product-card">
                            <img src="imagens/cropped cinza.png" alt="Cropped Cinza">
                            <h3>Cropped Cinza</h3>
                            <p class="price">R$29,99</p>
                        </article>
                        <article class="product-card">
                            <a href="/produto1"><img src="imagens/cropped flor.png" alt="Cropped Flor"></a>
                            <h3>Cropped Flor</h3>
                            <p class="price">R$19,99</p>
                        </article>
                        <article class="product-card">
                            <img src="imagens/cropped verde.png" alt="Cropped Verde">
                            <h3>Cropped Verde</h3>
                            <p class="price">R$17,00</p>
                        </article>
                        <article class="product-card">
                            <a href="/produto1"><img src="imagens/saia rosa brilhante.png" alt="Saia Rosa Brilhante"></a>
                            <h3>Saia Rosa Brilhante</h3>
                            <p class="price">R$19,99</p>
                        </article>
                        <article class="product-card">
                            <a href="/produto4"><img src="imagens/saia preta brilhante.png" alt="Saia Preta Brilhante"></a>
                            <h3>Saia Preta Brilhante</h3>
                            <p class="price">R$20,00</p>
                        </article>
                        <article class="product-card">
                            <img src="imagens/saia marrom.png" alt="Saia Marrom">
                            <h3>Saia Marrom</h3>
                            <p class="price">R$25,00</p>
                        </article>
                        <article class="product-card">
                            <img src="imagens/saias preto e branca.png" alt="Conjunto de Saias">
                            <h3>Conjunto de Saias</h3>
                            <p class="price">R$39,99</p>
                        </article>
                        <article class="product-card">
                            <a href="/produto1"><img src="imagens/vestido branco.png" alt="Vestido Branco"></a>
                            <h3>Vestido Branco</h3>
                            <p class="price">R$25,00</p>
                        </article>
                        <article class="product-card">
                            <a href="/produto4"><img src="imagens/vestido roxo.png" alt="Vestido Roxo"></a>
                            <h3>Vestido Roxo</h3>
                            <p class="price">R$20,00</p>
                        </article>
                        <article class="product-card">
                            <img src="imagens/vestido rosa.png" alt="Vestido Rosa">
                            <h3>Vestido Rosa</h3>
                            <p class="price">R$25,00</p>
                        </article>
                        <article class="product-card">
                            <img src="imagens/vestido preto.png" alt="Vestido Preto">
                            <h3>Vestido Preto</h3>
                            <p class="price">R$49,99</p>
                        </article>
                    </section>
                </section>
            </section>
        </section>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <img src="imagens/logo2.jpeg" alt="Vintélo" class="footer-logo">
        <section class="social-media">
