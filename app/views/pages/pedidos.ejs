            alert(`AvaliaÃ§Ã£o enviada: ${currentRating} estrelas`);
            closeModal();
        }

        // Fechar modal ao clicar fora
        window.onclick = function(event) {
            const modal = document.getElementById('reviewModal');
            if (event.target === modal) {
                modal.style.display = 'none';
            }
        }
