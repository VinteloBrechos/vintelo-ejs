                });
            }
        }

        function rejeitarDenuncia() {
            if (confirm('Tem certeza que deseja rejeitar esta denúncia? Esta ação não pode ser desfeita.')) {
                fetch(`/denuncias/rejeitar/<%= denuncia.ID_DENUNCIA %>`, {
